<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@color/darkblue">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="140dp"
					android:gravity="left"
					android:background="@drawable/mainwallpaper"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="10dp"
						android:text="오늘도 수고한 당신에게"
						android:textColor="@color/white"
						android:textSize="35dp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="10dp"
						android:textColor="@color/white"
						android:text="한글시계입니다"
						android:textSize="25dp" />

				</LinearLayout>

			<TextView
				android:layout_weight="1"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_margin="3dp"
				android:textColor="@color/white"
				android:text=""
				android:textSize="20dp" />


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:gravity="center"
					android:orientation="vertical">


					<TextView
						android:layout_weight="1"
						android:layout_gravity="left"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_margin="3dp"
						android:textColor="@color/white"
						android:text="-업데이트"
						android:textSize="20dp" />

					<TextView
						android:layout_weight="1"
						android:layout_gravity="left"
						android:onClick="update"
						android:id="@+id/version"
						android:layout_width="wrap_content"
						android:layout_height="0dp"
						android:layout_margin="3dp"
						android:textColor="@color/white"
						android:text="checking version..."
						android:textSize="20dp" />

				</LinearLayout>

			<TextView
				android:layout_weight="1"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_margin="3dp"
				android:textColor="@color/white"
				android:text="------------------------------------------"
				android:textSize="20dp" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="5dp"
					android:orientation="vertical"
					android:gravity="center">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:layout_gravity="left"
						android:textColor="@color/white"
						android:text="지금 한글시계는.."
						android:textSize="15dp"/>


					<TextView
						android:id="@+id/download"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="5dp"
						android:layout_gravity="left"
						android:textColor="@color/white"
						android:textSize="25dp"
						android:text="receiving info"/>

				</LinearLayout>

			<TextView
				android:layout_weight="1"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_margin="3dp"
				android:textColor="@color/white"
				android:text="------------------------------------------"
				android:textSize="20dp" />

			<LinearLayout
				android:gravity="bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_marginLeft="3dp"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="개발자 정보" />

				<TextView
					android:layout_marginLeft="3dp"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="위젯 코딩 : Joonhee Lee(대륜고)" />

				<TextView
					android:layout_marginLeft="3dp"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="기타 코딩 및 코드 개선 : Yongmin Yoo(성보고)" />

				<TextView
					android:layout_marginLeft="3dp"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:text="한글시계 홈페이지 : https://hangulclock.today" />

				<TextView
					android:layout_marginLeft="3dp"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginTop="5dp"
					android:text="Copyright © 2018 Lee Joon Hee(neo81389). Released under the GNU General Public License v3." />

			</LinearLayout>

			<TextView
				android:layout_weight="1"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_margin="3dp"
				android:textColor="@color/white"
				android:text="------------------------------------------"
				android:textSize="20dp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Button
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:onClick="setting"
					android:background="@color/white"
					android:text="설정" />

				<Button
					android:layout_weight="1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:background="@color/white"
					android:onClick="help"
					android:text="공지사항" />

			</LinearLayout>

			<TextView
				android:layout_weight="1"
				android:layout_gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_margin="3dp"
				android:textColor="@color/white"
				android:text="------------------------------------------"
				android:textSize="20dp" />

				<LinearLayout
					android:gravity="bottom"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:orientation="vertical"
					android:background="@drawable/mainwallpaperbottom">


				</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/sapcedark"
				android:gravity="center"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_margin="10dp"
					android:text="한글, 그 아름다움"
					android:textColor="@color/white"
					android:textSize="30dp"/>

				<ImageView
					android:layout_margin="20dp"
					android:layout_width="190dp"
					android:layout_height="190dp"
					android:background="@drawable/hangulclockexample"
					/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="50dp">

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="누구나"
					android:textColor="@color/white"
					android:textSize="30dp"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="관심이 있다면."
					android:textColor="@color/white"
					android:textSize="30dp"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="10dp">

				</LinearLayout>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="오픈소스 프로젝트"
					android:textColor="@color/white"
					android:textSize="30dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="10dp">

				</LinearLayout>


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center">

					<Button
						android:onClick="pc"
						android:layout_width="150dp"
						android:layout_height="40dp"
						android:text="PC 버전 GITHUB"
						android:textColor="@color/white"
						android:background="@drawable/button"
						android:layout_margin="10dp"
						/>

					<Button
						android:onClick="android"
						android:layout_width="150dp"
						android:layout_height="40dp"
						android:text="ANDROID 버전 GITHUB"
						android:textColor="@color/white"
						android:background="@drawable/button"
						android:layout_margin="10dp"
						/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="70dp">

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="개발자의 용돈벌이"
					android:textColor="@color/white"
					android:textSize="30dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="10dp">

				</LinearLayout>

				<com.google.android.gms.ads.AdView
					xmlns:ads="http://schemas.android.com/apk/res-auto"
					android:layout_gravity="center"
					android:layout_margin="3dp"
					android:id="@+id/adView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"
					ads:adSize="BANNER"
					ads:adUnitId="ca-app-pub-8081631582008293/5576438546">
				</com.google.android.gms.ads.AdView>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="10dp">

				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="광고"
					android:textColor="@color/white"
					android:textSize="30dp"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="10dp">

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</ScrollView>
    
</LinearLayout>
